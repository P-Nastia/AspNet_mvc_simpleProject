@model CategoryEditViewModel

<div class="container">
    <div class="container">

        <form asp-action="Edit" class="p-4 shadow rounded bg-light" style="max-width: 600px; margin: auto;">
            <h4 class="mb-4">Редагування категорії</h4>

            <!-- Назва категорії -->
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Назва категорії</label>
                <input asp-for="Name" class="form-control" placeholder="Введіть назву категорії" required>
                <span asp-validation-for="Name" class="text-danger"></span> @* щоби з CategoryCreateViewModel витягувало помилку *@
            </div>

            <!-- Опис -->
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Опис</label>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Введіть опис категорії"></textarea>
            </div>

            <!-- Зображення (URL) -->
            <div class="mb-3">
                <label asp-for="ImageUrl" class="form-label">URL зображення</label> @* так ще не будуть поля очищатися, якщо використовувати  asp-for *@
                <input class="form-control" asp-for="ImageUrl" placeholder="https://example.com/image.jpg">
            </div>

            <button type="submit" class="btn btn-primary">Редагувати категорію</button>
            <a asp-action="Index" class="btn btn-info">Cancel</a> @* інший спосіб переведення на метод Index, використовується маршрутизація *@
        </form>
    </div>
</div>
